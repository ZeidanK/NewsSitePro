<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - NewsSitePro</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    @await Html.PartialAsync("_HeaderPartial", headerData)
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</body>
</html>