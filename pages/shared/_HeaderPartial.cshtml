@model NewsSitePro.Models.HeaderViewModel

<header>
    <nav>
        <a href="/">Home</a>
        <a href="/Profile">@Model.UserName ?? "Guest"</a>
        <a href="/Post">Post</a>
        <a href="/Notifications">
            <span class="icon-bell"></span>
            @if (Model.NotificationCount > 0)
            {
                <span class="badge">@Model.NotificationCount</span>
            }
        </a>
        @if (Model.CurrentPage == "Login" || Model.CurrentPage == "Register")
        {
            <a href="/Login">Login</a>
            <a href="/Register">Register</a>
        }
        else
        {
            <a href="/Logout">Logout</a>
        }
    </nav>
    <div>Current Page: @Model.CurrentPage</div>
</header>