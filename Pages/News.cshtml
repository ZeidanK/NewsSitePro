@*
    News.cshtml - Public news page for browsing and reading news articles
    Allows users to browse news by category and source, preview articles, and view published content
*@
@page "/News"
@model NewsSite.Pages.NewsModel
@{
    ViewData["Title"] = "Latest News";
    Layout = "~/Pages/Shared/_Layout.cshtml"; 
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-news.css" />
    <link rel="stylesheet" href="~/css/post-card.css" />
    <link rel="stylesheet" href="~/css/mobile-responsive.css" />
}

<!-- Main Content -->
<div class="container-fluid mt-3">
    <!-- Top Filters Bar -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-2">
                            <h5 class="mb-0"><i class="fas fa-newspaper"></i> Latest News</h5>
                        </div>
                        <div class="col-md-10">
                            <div class="row g-2">
                                <!-- Category Filter -->
                                <div class="col-md-6">
                                    <label for="categorySelect" class="form-label mb-1 small text-muted">Category</label>
                                    <select class="form-select form-select-sm" id="categorySelect">
                                        <option value="">All Categories</option>
                                        <option value="general">General</option>
                                        <option value="business">Business</option>
                                        <option value="entertainment">Entertainment</option>
                                        <option value="health">Health</option>
                                        <option value="science">Science</option>
                                        <option value="sports">Sports</option>
                                        <option value="technology">Technology</option>
                                    </select>
                                </div>

                                <!-- Action Buttons -->
                                <div class="col-md-6">
                                    <label class="form-label mb-1 small text-muted">&nbsp;</label>
                                    <div class="btn-group w-100" role="group">
                                        <button class="btn btn-outline-secondary btn-sm" id="refreshBtn">
                                            <i class="fas fa-sync-alt"></i> Refresh
                                        </button>
                                        <button class="btn btn-outline-info btn-sm" id="clearFiltersBtn">
                                            <i class="fas fa-eraser"></i> All Categories
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Articles Section -->
    <div class="row">
        <div class="col-12">
            <!-- News Articles Container -->
            <div id="newsArticlesContainer">
                <div class="text-center p-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2 text-muted">Loading latest news...</p>
                </div>
            </div>

            <!-- Load More Button -->
            <div class="text-center mt-4" id="loadMoreSection" style="display: none;">
                <button class="btn btn-outline-primary" id="loadMoreBtn">
                    <i class="fas fa-plus"></i> Load More Articles
                </button>
                <div class="mt-2">
                    <small class="text-muted">Scroll down or click to load more articles</small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Article Preview Modal -->
<div class="modal fade" id="articlePreviewModal" tabindex="-1" aria-labelledby="articlePreviewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="articlePreviewModalLabel">Article Preview</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="articlePreviewContent">
                    <!-- Article content will be loaded here -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <a href="#" class="btn btn-primary" id="readFullArticleBtn" target="_blank">
                    <i class="fas fa-external-link-alt"></i> Read Full Article
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/public-news-feed.js"></script>
}
