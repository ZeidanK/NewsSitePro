@page
@model NewsSite.Pages.RegisterModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["HeaderData"] = Model.HeaderData;
    ViewData["Title"] = "Register";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />

<h2>Register</h2>
<form id="registerForm" method="post" class="mt-4 w-50 mx-auto border p-4 rounded shadow-sm bg-light">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" id="nameInput" name="Name" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" id="emailInput" name="Email" type="email" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" class="form-control" id="passwordInput" name="Password" type="password" minlength="6" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary w-100">Register</button>
    
    <div class="text-center my-3">
        <span class="text-muted">or</span>
    </div>
    
    <button type="button" id="googleRegisterBtn" class="btn btn-outline-danger w-100">
        <i class="fab fa-google me-2"></i>Continue with Google
    </button>
    
    <div class="text-center mt-3">
        <p class="text-muted">Already have an account? <a href="/Login" class="text-decoration-none">Sign in here</a></p>
    </div>
</form>

@section Scripts {
    <script>
        document.getElementById('registerForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            const name = document.getElementById('nameInput').value;
            const email = document.getElementById('emailInput').value;
            const password = document.getElementById('passwordInput').value;
            const messageDiv = document.getElementById('registerMessage');

            // Clear previous message
            messageDiv.textContent = '';
            messageDiv.className = '';

            try {
                const response = await fetch(window.ApiConfig.getApiUrl('/api/Auth/register'), {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name: name, email: email, password: password })
                });

                if (response.ok) {
                    messageDiv.textContent = 'Registration successful! Redirecting to login...';
                    messageDiv.className = 'alert alert-success mt-3';
                    setTimeout(() => {
                        window.location.href = window.ApiConfig.getApiUrl('/Login');
                    }, 1500);
                } else {
                    const error = await response.text();
                    messageDiv.textContent = `Error: ${error}`;
                    messageDiv.className = 'alert alert-danger mt-3';
                }
            } catch (err) {
                messageDiv.textContent = 'An error occurred. Please try again later.';
                messageDiv.className = 'alert alert-danger mt-3';
            }
        });

        // Google OAuth Registration
        document.getElementById('googleRegisterBtn').addEventListener('click', async function () {
            try {
                const messageDiv = document.getElementById('registerMessage');
                messageDiv.textContent = 'Redirecting to Google...';
                messageDiv.className = 'alert alert-info mt-3';

                // Get Google OAuth URL
                const response = await fetch(window.ApiConfig.getApiUrl('/api/GoogleOAuth/auth-url'));
                const data = await response.json();

                if (response.ok && data.authUrl) {
                    // Redirect to Google OAuth
                    window.location.href = data.authUrl;
                } else {
                    messageDiv.textContent = 'Failed to initiate Google authentication';
                    messageDiv.className = 'alert alert-danger mt-3';
                }
            } catch (error) {
                const messageDiv = document.getElementById('registerMessage');
                messageDiv.textContent = 'Google authentication error. Please try again.';
                messageDiv.className = 'alert alert-danger mt-3';
            }
        });
    </script>
}
<div id="registerMessage"></div>