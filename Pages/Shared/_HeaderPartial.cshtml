@model NewsSitePro.Models.HeaderViewModel

<!-- ------------------------------------------------------------------------------
     _HeaderPartial.cshtml

     This partial view renders the main header and navigation bar for NewsSitePro.
     It shows only icons with the same navigation routes as the left sidebar.
------------------------------------------------------------------------------ -->
<header class="main-header">
    <nav class="header-nav">
        <!-- Icon-only navigation matching left sidebar -->
        <div class="header-nav-icons">
            <a href="~/" class="nav-btn" title="Home">
                <span class="nav-icon">🏠</span>
            </a>
            <a href="~/Search" class="nav-btn" title="Search">
                <span class="nav-icon">🔍</span>
            </a>
            <a href="~/News" class="nav-btn" title="Latest News">
                <span class="nav-icon">📰</span>
            </a>
            <a href="~/Features" class="nav-btn" title="Features">
                <span class="nav-icon">✨</span>
            </a>
            
            <!-- Auth Required Items -->
            <a href="~/UserProfile" class="nav-btn" data-auth-required title="Profile">
                <span class="nav-icon">👤</span>
            </a>
            <a href="~/Notifications" class="nav-btn" data-auth-required title="Notifications">
                <span class="nav-icon">🔔</span>
                <span class="notification-badge" style="display: none;"></span>
            </a>
            <a href="~/SavedArticles" class="nav-btn" data-auth-required title="Saved Articles">
                <span class="nav-icon">🔖</span>
            </a>
            <a href="~/Admin" class="nav-btn" data-auth-required data-admin-only style="display: none;" title="Admin Panel">
                <span class="nav-icon">⚙️</span>
            </a>
            
            <!-- Logout Button -->
            <button class="nav-btn logout-btn" id="logoutBtn" data-auth-required title="Logout">
                <span class="nav-icon">🚪</span>
            </button>
            
            <!-- Guest Only Items -->
            <a href="~/Login" class="nav-btn" data-guest-only title="Login">
                <span class="nav-icon">🔐</span>
            </a>
            <a href="~/Register" class="nav-btn" data-guest-only title="Register">
                <span class="nav-icon">✍️</span>
            </a>
        </div>
    </nav>
</header>
