
@page "/AdminNews"
@model NewsSite.Pages.AdminNewsModel
@using NewsSite.BL
@{
    ViewData["Title"] = "News Management - Admin";
    Layout = "~/Pages/Shared/_Layout.cshtml"; 
}
@*
    AdminNews.cshtml - Admin-only news management page for fetching, reviewing, and publishing news articles
    Integrates with live news feed system and external news APIs for comprehensive news content management
*@
<!-- ------------------------------------------------------------------------------
	 AdminNews.cshtml

	 This Razor page implements the admin-only news management interface for NewsSitePro.
	 It allows admins to fetch, review, and publish news articles from external sources,
	 manage news sources, and configure auto-publishing/background services. The page
	 integrates with live news feeds and external APIs for comprehensive content control.
	 Key sections and modals are commented for clarity.
------------------------------------------------------------------------------ -->
@section Styles {
    <link rel="stylesheet" href="~/css/admin-news.css" />
    <link rel="stylesheet" href="~/css/post-card.css" />
    <link rel="stylesheet" href="~/css/mobile-responsive.css" />
    <style>
        /* Hide right sidebar on AdminNews page */
        .right-sidebar {
            display: none !important;
        }
        /* Adjust main content to use full width when right sidebar is hidden */
        .main-content {
            max-width: 100% !important;
        }
    </style>
}

<!-- Page Header -->
<div class="admin-news-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1><i class="fas fa-newspaper"></i> News Management</h1>
                <p class="text-muted">Fetch, review, and publish news articles from external sources</p>
            </div>
            <div class="col-md-4 text-end">
                <div class="header-stats">
                    <div class="stat-item">
                        <span class="stat-number" id="totalCount">@Model.TotalArticlesCount</span>
                        <span class="stat-label">Total Articles</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number" id="publishedCount">@Model.PublishedTodayCount</span>
                        <span class="stat-label">Published Today</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container-fluid mt-4">
    <div class="row">
        <!-- Left Sidebar - News Sources & Controls -->
        <div class="col-md-3">
            <div class="admin-sidebar">
                <!-- News Fetching Controls -->
                <div class="sidebar-section">
                    <h5><i class="fas fa-download"></i> Fetch News</h5>
                    
                    <!-- Category Selection -->
                    <div class="mb-3">
                        <label class="form-label">Category</label>
                        <select id="categorySelect" class="form-select">
                            <option value="general">General</option>
                            <option value="business">Business</option>
                            <option value="technology">Technology</option>
                            <option value="health">Health</option>
                            <option value="science">Science</option>
                            <option value="sports">Sports</option>
                            <option value="entertainment">Entertainment</option>
                        </select>
                    </div>

                    <!-- Country Selection -->
                    <div class="mb-3">
                        <label class="form-label">Country</label>
                        <select id="countrySelect" class="form-select">
                            <option value="us">United States</option>
                            <option value="gb">United Kingdom</option>
                            <option value="ca">Canada</option>
                            <option value="au">Australia</option>
                            <option value="de">Germany</option>
                            <option value="fr">France</option>
                        </select>
                    </div>

                    <!-- Article Count Selection -->
                    <div class="mb-3">
                        <label class="form-label">Number of Articles</label>
                        <select id="articleCountSelect" class="form-select">
                            <option value="10">10 articles</option>
                            <option value="20" selected>20 articles</option>
                            <option value="50">50 articles</option>
                        </select>
                    </div>

                    <!-- Single Fetch Button -->
                    <div class="d-grid">
                        <button id="fetchNewsBtn" class="btn btn-primary">
                            <i class="fas fa-download"></i> Fetch News Articles
                        </button>
                    </div>
                </div>

                <!-- Publishing Actions -->
                <div class="sidebar-section">
                    <h5><i class="fas fa-rocket"></i> Publishing</h5>
                    <div class="d-grid gap-2">
                        <button id="publishSelectedSidebarBtn" class="btn btn-success btn-sm" disabled>
                            <i class="fas fa-check"></i> Publish Selected (<span id="selectedCountSidebar">0</span>)
                        </button>
                        <button id="clearSelectionSidebarBtn" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-times"></i> Clear Selection
                        </button>
                    </div>
                </div>

                <!-- Background Service -->
                <div class="sidebar-section">
                    <h5><i class="fas fa-cog"></i> Settings</h5>
                    <div class="d-grid gap-2">
                        <button id="backgroundServiceBtn" class="btn btn-outline-info btn-sm" title="Toggle automatic news fetching every 24 hours">
                            <i class="fas fa-clock"></i> <span id="backgroundServiceText">Auto Sync: OFF</span>
                        </button>
                        <button id="manageSourcesBtn" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-globe"></i> Manage Sources
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="col-md-9">
                <!-- Publishing Actions: publish/clear selected articles -->
            <!-- Simple News Articles Container -->
            <div class="news-articles-container">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5>Fetched Articles <span class="badge bg-info" id="fetchedCount">0</span></h5>
                    <div>
                        <button id="publishSelectedBtn" class="btn btn-success" disabled>
                            <i class="fas fa-check"></i> Publish Selected (<span id="selectedCount">0</span>)
                        </button>
                        <button id="clearSelectionBtn" class="btn btn-outline-secondary ms-2">
                            <i class="fas fa-times"></i> Clear Selection
                        </button>
                    </div>
                </div>
                
                <!-- Articles will be loaded here -->
                <div id="newsArticlesContainer">
                    <!-- Dynamic news articles will be populated here -->
                </div>
            </div>
        </div>
    </div>
</div>

<!-- News Article Preview Modal - Simplified -->
<div class="modal fade" id="articlePreviewModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Article Preview</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="articlePreviewContent">
                <!-- Article preview content will be populated here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Close
                </button>
                <button type="button" class="btn btn-success" id="publishFromModalBtn">
                    <i class="fas fa-rocket"></i> Publish This Article
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Source Management Modal -->
<div class="modal fade" id="sourceManagementModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Manage News Sources</h5>
<!-- News Article Preview Modal: preview and publish single article -->
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">API Key</label>
                    <input type="password" id="apiKeyInput" class="form-control" placeholder="Enter News API key">
                </div>
                <div class="mb-3">
                    <label class="form-label">Preferred Sources</label>
                    <div id="preferredSources" class="source-checkboxes">
                        <!-- Dynamic source checkboxes will be populated here -->
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Auto-Publish Settings</label>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="autoPublishEnabled">
                        <label class="form-check-label" for="autoPublishEnabled">
                            Enable automatic publishing for trusted sources
                        </label>
                    </div>
                </div>
            </div>
<!-- Source Management Modal: manage API keys and preferred sources -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveSourcesBtn">Save Settings</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin-news-feed-simple.js"></script>
}
